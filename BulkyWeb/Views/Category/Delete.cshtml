@model Category

<form method="post" asp-controller="Category" asp-action="Delete">
    <input asp-for="CategoryId" hidden />
    <div class="border p-4 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete Confirmation</button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back</a>

            </div>

        </div>


    </div>
</form>

