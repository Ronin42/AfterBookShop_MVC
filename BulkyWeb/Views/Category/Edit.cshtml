@model Category

<form method="post" asp-controller="Category" asp-action="Edit">
    <input asp-for="CategoryId" hidden />
    <div class="border p-4 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr/>
        </div>
        <div class="mb-3 row">
            <label class="p-0">Category Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label class="p-0">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-success form-control">Save Change</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back</a>

            </div>

        </div>
        <div asp-validation-summary="All"></div> <!-- แสดง inValid ทั้งหมด -->


    </div>
</form>

<!-- โค้ดสำหรับ แสดง invalid แบบ real time-->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}