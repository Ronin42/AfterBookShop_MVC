@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded ">
                        <div class="mb-2">
                            <img src="@product.ImageUrl" class="card-img-top rounded" width="400"
                             height="300" />
                         </div>
                        <div class="pl-1">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                            <p class="card-title text-warning text-center"><b>@product.Author</b></p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark opacity-75 text-center mb-0">
                                ListPrice:
                                <span class="text-decoration-line-through">
                                    @product.ListPrice.ToString("c")
                                </span>
                            </p>
                            <p class="text-dark opacity-75 text-center">
                                As Low as:
                                <span>
                                    @product.Price100.ToString("c")
                                </span>
                            </p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Detail" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                            ซื้อ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>