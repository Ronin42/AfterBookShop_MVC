@model Category

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-warning bg-gradient nl-0 py-3">
        <div class="row">
            <div class ="col-12 text-center">
                <h2 class="text-white py-2">แก้ไขข้อมูลหมวดหมู่หนังสือ</h2>
            </div>
        </div>
   </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <input type="hidden" asp-for="CategoryId" /> @*สำหรับส่ง id *@
                
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row pt-3">
                    <div class="col-6 col-md-6 mx-auto">
                        <button type="submit" class="btn btn-outline-danger form-control">ยืนยันการแก้ไข</button>
                    </div>
                    <div class="col-6 col-md-6 mx-auto">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">กลับสู่หน้าเมนู</a>
                     </div>

                </div>
                <div asp-validation-summary="All"></div> <!-- แสดง inValid ทั้งหมด -->
            </div>
        </form>


    </div>
</div>

        </div>
    </div>
</div>





<!-- โค้ดสำหรับ แสดง invalid แบบ real time-->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}